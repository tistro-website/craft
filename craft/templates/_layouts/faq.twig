 {%requireLogin%}
  {% include '_layouts/header1.twig'%}

{% macro errorList(errors) %}
    {% if errors %}
        <ul class="errors">
            {% for error in errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endmacro %}

{% from _self import errorList %}

<form method="post" accept-charset="UTF-8" class ="pure-form">
 
    {{ getCsrfInput() }}
    <input type="hidden" name="action" value="entries/saveEntry">
    <input type="hidden" name="redirect" value="viewentry/{slug}">
    <input type="hidden" name="sectionId" value="2">
    <input type="hidden" name="enabled" value="1">

    

        
   <section class="fdb-block" style="background-image: url(../public/imgs/bg_0.svg)">
    <div class="container">
      <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-8 col-xl-6" text-center" > 
          <div class="fdb-box fdb-touch">
        
          <div class="row">
            <div class="col text-center">     
   

 <fieldset class="pure-group">
      <legend>FAQ</legend>

<h3><p align="center">For any questions or queries please post here</p></h3>

        <div class="pure-u-1 pure-u-md-1-3">  
   <br> <label for="title">Username</label>
    <input id="title" type="text" name="title" class="form-control"
        {%- if entry is defined %} value="{{ entry.title }}"{% endif -%}>

    {% if entry is defined %}
        {{ errorList(entry.getErrors('title')) }}
    {% endif %}
</br>
</div>

    <div class="pure-u-1 pure-u-md-1-3">
    <br><label for="body">Comments</label>
    <textarea id="body" name="fields[body]" class="form-control" placeholder="Textareas work too"  >
        {%- if entry is defined %}{{ entry.body }}{% endif -%}
    </textarea>
</br>
    {% if entry is defined %}
        {{ errorList(entry.getErrors('body')) }}
    {% endif %}
</div>

  <br>  <input type="submit" value="Publish"  class="btn-success" ></br>
   </fieldset>
